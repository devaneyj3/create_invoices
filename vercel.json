{
  "buildCommand": "yarn build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "app/**/*.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  
  "crons": [
    {
      "path": "/api/test-cron",
      "schedule": "* * * * *"
    }
  ]
} 
